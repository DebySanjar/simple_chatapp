<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- YOU (current user) message -->
    <LinearLayout
        android:id="@+id/youMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/youName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="You"
            android:textColor="#999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/youMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_sender"
            android:padding="10dp"
            android:text="Message"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- OTHER (received) message -->
    <LinearLayout
        android:id="@+id/otherMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/otherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Sanjarbek"
            android:textColor="#999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/otherMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_receiver"
            android:padding="10dp"
            android:text="Message"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
